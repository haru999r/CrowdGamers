root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8

[*.py]
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.sh]
indent_size = 4

[*.yml]
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.html]
indent_size = 2
insert_final_newline = false

[*.scss]
indent_size = 2
